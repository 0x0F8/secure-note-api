{
  "name": "secure-note-server",
  "packageManager": "yarn@4.6.0",
  "main": "src/index.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production ts-node src/index.ts",
    "start:dev": "cross-env NODE_ENV=development ts-node src/index.ts",
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "build": "rimraf dist && cross-env NODE_ENV=production tsc",
    "start:dist": "cross-env NODE_ENV=production node dist/index.js",
    "lint": "eslint --fix src test",
    "test": "jest",
    "typecheck": "cross-env NODE_ENV=production tsc --noEmit",
    "deploy": "npm run build && scp -r ./dist root@ssh.secrypt.zip:/var/node/secure-note-server"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "mongodb": "^6.14.0",
    "morgan": "^1.10.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.13",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.7",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.16.1",
    "@typescript-eslint/parser": "^7.16.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
